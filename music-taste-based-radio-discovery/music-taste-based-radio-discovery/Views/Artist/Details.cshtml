@model music_taste_based_radio_discovery.Models.ArtistDetails
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="column">
        <h2>@Model.ArtistName</h2>
        <div class="row small-up-1 medium-up-2 large-up-4">
            Played @Model.PlayCount times
        </div>
        <div class="row small-up-1 medium-up-2 large-up-4">
            Most popular channel @Model.Channel
        </div>
    </div>
</div>