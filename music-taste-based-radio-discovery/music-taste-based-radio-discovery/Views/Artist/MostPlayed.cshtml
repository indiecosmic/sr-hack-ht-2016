@model IEnumerable<SpotifyWebAPI.Artist>

<div class="row">
    <div class="column">
        <h2>Artists</h2>

        <div class="row small-up-1 medium-up-2 large-up-4">
            @foreach (var artist in Model)
            {
                <div class="column">
                    @if (artist.Images.Count > 0)
                    {
                        <img src="@artist.Images.First().Url" class="thumbnail" alt=""/>
                    }

                    <h4 class="thumbnail__artist-name">
                        @Html.ActionLink(artist.Name, "Details", new {id=artist.Id})
                    </h4>

                    <p class="thumbnail__artist-genres">
                        @{ var str = string.Join(", ", artist.Genres); }
                        @str
                    </p>
                </div>
            }
        </div>

    </div>
</div>